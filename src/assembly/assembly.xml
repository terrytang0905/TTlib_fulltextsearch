<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>assembly</id>
	<formats>
		<format>war</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<dependencySets>
		<dependencySet>
	        <unpack>false</unpack>
	        <includes>
	            <include>*:jar:*</include>
	        </includes>
	        <scope>runtime</scope>
	        <useProjectArtifact>false</useProjectArtifact>
	        <outputDirectory>WEB-INF/lib</outputDirectory>
	    </dependencySet>
	</dependencySets>

	<fileSets>
		<fileSet>
			<directory>${project.build.directory}/classes</directory>
			<outputDirectory>WEB-INF/classes</outputDirectory>
			<excludes>
				<exclude>**/config/*.properties</exclude>
				<exclude>**/config/*.yml</exclude>
				<exclude>**/river/*.json</exclude>
			</excludes>
		</fileSet>
		<fileSet>
			<directory>src/main/webapp</directory>
			<outputDirectory>/</outputDirectory>
		</fileSet>
	</fileSets>
	
	<files>
		<file>
			<source>src/assembly/config/memcached.properties</source>
			<outputDirectory>WEB-INF/classes/config</outputDirectory>
			<filtered>true</filtered>
		</file>
		<file>
			<source>src/assembly/config/mongodb.properties</source>
			<outputDirectory>WEB-INF/classes/config</outputDirectory>
			<filtered>true</filtered>
		</file>
		<file>
			<source>src/assembly/config/fulltextsearch.properties</source>
			<outputDirectory>WEB-INF/classes/config</outputDirectory>
			<filtered>true</filtered>
		</file>
		<file>
			<source>src/assembly/config/settings.yml</source>
			<outputDirectory>WEB-INF/classes/config</outputDirectory>
			<filtered>true</filtered>
		</file>
		<file>
			<source>src/assembly/config/mongo-note-cn-river.json</source>
			<outputDirectory>WEB-INF/classes/river</outputDirectory>
			<filtered>true</filtered>
		</file>
		<file>
			<source>src/assembly/config/mongo-note-river.json</source>
			<outputDirectory>WEB-INF/classes/river</outputDirectory>
			<filtered>true</filtered>
		</file>
		<file>
			<source>src/assembly/config/mongo-resource-river.json</source>
			<outputDirectory>WEB-INF/classes/river</outputDirectory>
			<filtered>true</filtered>
		</file>
		<file>
			<source>src/assembly/config/mongo-tag-river.json</source>
			<outputDirectory>WEB-INF/classes/river</outputDirectory>
			<filtered>true</filtered>
		</file> 
	</files>
</assembly>